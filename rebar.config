% Common project erlang options.
{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_export_vars,
    warn_shadow_vars,
    warn_obsolete_guard,
    {parse_transform, lager_transform}
]}.

% Common project dependencies.
{deps, [
    {pooler,".*",{git,"https://github.com/seth/pooler","master"}},
    {scrypt,".*",{git,"https://github.com/tonyg/erlang-scrypt",""}},
    {shamir,".*",{git,"https://github.com/rnewson/shamir",""}},
    {riakc,".*",{git,"https://github.com/basho/riak-erlang-client",""}},
    {woody,".*",{git,"https://github.com/rbkmoney/woody_erlang",""}},
    {lager,".*",{git,"https://github.com/basho/lager","3.1.0"}} %% rebar3 ct works bad with 3.2.0
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    % locals_not_used,
    deprecated_functions_calls,
    deprecated_functions
]}.

{relx, [
    {release, { cds , "0.1.0"}, [
        cds,
        sasl
    ]},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs,
        unknown
    ]}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]},
    {test, [
        {deps, [
            {meck, ".*", {git, "https://github.com/eproxus/meck", ""}},
            {proper, ".*", {git, "https://github.com/manopapad/proper", ""}}
        ]}
    ]},
    {dev, [
        {deps, [
            {sync, ".*", {git, "https://github.com/rustyio/sync", ""}}
        ]},
        {plugins, [
            rebar3_run
        ]}
    ]}
]}.

{plugins, [
    {rebar3_thrift_compiler, {git, "https://github.com/rbkmoney/rebar3_thrift_compiler.git", {tag, "0.2"}}}
]}.

{overrides, [
    {override, cds, [
        {provider_hooks, [
            {pre, [
                {compile, {thrift, compile}},
                {clean, {thrift, clean}}
            ]}
        ]},
        {thrift_compiler_opts, [
            {in_dir, "damsel/proto"},
            {in_files, ["cds.thrift"]},
            {gen, "erlang:idiomatic"}
        ]}
    ]},
    {override, rebar3_protobuffs_plugin, [
        {deps, [
            {protobuffs, {git, "git://github.com/basho/erlang_protobuffs.git", {tag, "0.8.2"}}}
        ]}
    ]},
    {override, protobuffs, [
        {deps, []}
    ]},
    {override, riak_pb, [
        {plugins, [
            {riak_pb_msgcodegen, {git, "git://github.com/tsloughter/riak_pb_msgcodegen", {branch, "master"}}},
            {rebar3_protobuffs_plugin, {git, "git://github.com/cmkarlsson/rebar3_protobuffs_plugin", {tag, "0.1.1"}}}
        ]},
        {provider_hooks, [
            {pre, [
                {compile, {protobuffs, compile}},
                {compile, riak_pb_msgcodegen}
            ]}
        ]}
    ]},
    {override, hamcrest, [
        {plugins, []}
    ]},
    {override, scrypt, [
        {plugins, [
            pc
        ]},
        {provider_hooks, [
            {pre, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]},
        {port_env, [
            {"CFLAGS", "-O3 -fomit-frame-pointer -funroll-loops -DHAVE_CONFIG_H"}
        ]},
        {port_specs, [
            {"priv/scrypt", ["priv/scrypt_port/*.c"]}
        ]},
        {post_hooks, []}
    ]}
]}.
